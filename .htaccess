RewriteEngine On

# Redirect root to index.php
DirectoryIndex index.php

# Preserve API routes and authentication files - no rewriting
RewriteCond %{REQUEST_URI} ^/(api/|manual-login\.php|manual-signup\.php|google-auth\.php) [NC]
RewriteRule ^(.*)$ $1 [L,QSA]

# Remove .php extension from main pages only
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/(api/|manual-login\.php|manual-signup\.php|google-auth\.php) [NC]
RewriteRule ^([^.]+)$ $1.php [NC,L]

# Redirect .php URLs to clean URLs (except API and auth files)
RewriteCond %{THE_REQUEST} \s/+([^\s?]*)\.php[?\s] [NC]
RewriteCond %{REQUEST_URI} !^/(api/|manual-login\.php|manual-signup\.php|google-auth\.php) [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Cache control for static assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    Header set Cache-Control "public, immutable"
</FilesMatch>

# Prevent access to sensitive files
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

<Files ~ "\.sql$">
    Order allow,deny
    Deny from all
</Files>

<Files ~ "config\.php$">
    Order allow,deny
    Deny from all
</Files>